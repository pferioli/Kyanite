<%- include ("../partials/header") %>

<main class="site-content">
  <div class="container" style="margin-top: 50px;">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Informacion Detallada</span>
          <div class="row" style="margin-top: 20px;">
            <div class="input-field col s9">
              <i class="material-icons prefix">home</i>
              <input id="razon_social" value="<%=data.supplier.name%>" type="text" />
              <label for="razon_social">Nombre del Proveedor</label>
            </div>
            <div class="input-field col s3">
              <input id="cuit" value="<%=data.supplier.cuit%>" type="text" />
              <label for="cuit">C.U.I.T.</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="taxCategory" value="<%=data.supplier.taxCategory.name%>" type="text" />
              <label for="taxCategory">Categoria Impositiva</label>
            </div>
            <div class="input-field col s6">
              <input id="supplierCategory" value="<%=data.supplier.supplierCategory.name%>" type="text" />
              <label for="supplierCategory">Rubro</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s9">
              <i class="material-icons prefix">mail</i>
              <input id="correo_electronico" value="<%=data.supplier.email%>" type="text" />
              <label for="correo_electronico">Correo Electronico</label>
            </div>
            <div class="input-field col s3">
              <i class="material-icons prefix">local_phone</i>
              <input id="telefono" value="<%=data.supplier.phone%>" type="text" />
              <label for="telefono">Telefono</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">location_on</i>
              <input id="direccion" value="<%=data.supplier.address%>" type="text" />
              <label for="direccion">Direccion</label>
            </div>
            <div class="input-field col s3">
              <i class="material-icons prefix">location_city</i>
              <input id="ciudad" value="<%=data.supplier.city%>" type="text" />
              <label for="ciudad">Ciudad</label>
            </div>
            <div class="input-field col s3">
              <i class="material-icons prefix">details</i>
              <input id="codigo_postal" value="<%=data.supplier.zipCode%>" type="text" />
              <label for="codigo_postal">Codigo Postal</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea id="observaciones" class="materialize-textarea" value="<%=data.supplier.comments%>"
                disabled></textarea>
              <label for="observaciones">Observaciones</label>
            </div>
          </div>
        </div>
        <div class="card-action right-align">
          <a href="/suppliers" class="waves-effect waves-light btn red" style="margin-left: 20px;"><i
              class="material-icons right">cancel</i>Volver</a>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var elems = document.querySelectorAll("select");
    var instances = M.FormSelect.init(elems, {});
    var select = document.getElementById("taxCategorySelect").value = 5;
    M.FormSelect.init(elems, {});
  });
</script>

