<%- include ("../partials/header") %>

<main class="site-content">
    <div class="container" style="margin-top: 50px;">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Informacion Detallada</span>
                <div class="row" style="margin-top: 20px;">
                    <div class="input-field col s10">
                        <i class="material-icons prefix">location_city</i>
                        <input id="razon_social" value="<%=data.client.name%>" type="text" disabled/>
                        <label for="razon_social">Nombre del Barrio</label>
                    </div>
                    <div class="input-field col s2">
                        <i class="material-icons prefix">label</i>
                        <input id="codigo" value="<%=data.client.internalCode%>" type="text" disabled/>
                        <label for="codigo">Codigo Interno</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s3">
                        <i class="material-icons prefix">info</i>
                        <input id="cuit" value="<%=data.client.cuit%>" type="text" readonly/>
                        <label for="cuit">C.U.I.T.</label>
                    </div>
                    <div class="input-field col s5">
                        <i class="material-icons prefix">point_of_sale</i>                        
                        <input id="taxCategory" value="<%=data.client.taxCategory.name%>" type="text" readonly />
                        <label for="taxCategory">Categoria Impositiva</label>
                    </div>
                    <div class="input-field col s2">
                        <i class="material-icons prefix">home</i>
                        <input id="functionalUnitsCount" name="functionalUnitsCount" type="text"  value="<%=data.client.functionalUnitsCount%>" readonly />
                        <label for="functionalUnitsCount">Cantidad de UFs</label>
                    </div>
                    <div class="input-field col s2">
                        <input id="lotSize" name="lotSize" type="text" value="<%=data.client.lotSize%>" readonly/>
                        <label for="lotSize">Tama√±o del Lote [m<span><sup>2</sup></span>]</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s9">
                        <i class="material-icons prefix">mail</i>
                        <input id="correo_electronico" value="<%=data.client.email%>" type="text" readonly/>
                        <label for="correo_electronico">Correo Electronico</label>
                    </div>
                    <div class="input-field col s3">
                        <i class="material-icons prefix">local_phone</i>
                        <input id="telefono" value="<%=data.client.phone%>" type="text" readonly />
                        <label for="telefono">Telefono</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">location_on</i>
                        <input id="direccion" value="<%=data.client.address%>" type="text" readonly />
                        <label for="direccion">Direccion</label>
                    </div>
                    <div class="input-field col s3">
                        <i class="material-icons prefix">domain</i>
                        <input id="ciudad" value="<%=data.client.city%>" type="text" readonly />
                        <label for="ciudad">Ciudad</label>
                    </div>
                    <div class="input-field col s3">
                        <i class="material-icons prefix">markunread_mailbox</i>
                        <input id="codigo_postal" value="<%=data.client.zipCode%>" type="text" readonly />
                        <label for="codigo_postal">Codigo Postal</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">comment</i>
                        <textarea id="comments" class="materialize-textarea" readonly><%=data.client.comments%> </textarea>
                        <label for="comments">Observaciones</label>
                    </div>
                </div>
            </div>

            <div class="card-action right-align">
                <a href="/bankaccounts/<%=data.client.id%>" class="waves-effect waves-light btn"><i class="material-icons right">account_balance</i>Cuentas</a>

                <a href="/clients/edit/<%=data.client.id%>" class="waves-effect waves-light btn" style="margin-left: 20px;"> <i class="material-icons right">edit</i>Modificar</a>

                <button action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancel"
                    class="waves-effect waves-light btn red" style="margin-left: 20px;"><i class="material-icons right">cancel</i>Volver</button>
            </div>

        </div>
    </div>
</main>

<%- include ("../partials/footer") %>